include "root" {
  path = find_in_parent_folders()
}

terraform {
  source = "${get_parent_terragrunt_dir()}/common/snowflake_auth"
}

locals {
  config = yamldecode(file("common_vars.yaml"))
}

inputs = merge(
  local.config,
  {
    tenant_id     = get_env("AZURE_TENANT_ID")
    client_id     = get_env("AZURE_CLIENT_ID")
    client_secret = get_env("AZURE_CLIENT_SECRET")
  }
)

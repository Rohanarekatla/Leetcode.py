import smtplib
from email.mime.multipart import MIMEMultipart
from email.mime.text import MIMEText

# Step 1: Read the HTML file
with open('output.out', 'r') as file:
    html_content = file.read()

# Step 2: Clean and format the HTML (example: wrap in a table if needed)
# If the content is not already in a table, you can wrap it in one
if "<table" not in html_content:
    html_content = f"""
    <table style="width: 100%; border-collapse: collapse;">
        <tr>
            <td style="padding: 10px; border: 1px solid #ddd;">{html_content}</td>
        </tr>
    </table>
    """

# Step 3: Add professional styling
css = """
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        background-color: #f9f9f9;
    }
    .container {
        max-width: 100%;
        overflow-x: auto;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }
    th, td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }
    th {
        background-color: #007bff;
        color: white;
        font-weight: bold;
    }
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
    tr:hover {
        background-color: #ddd;
    }
    @media (max-width: 600px) {
        th, td {
            padding: 8px;
        }
    }
</style>
"""

# Wrap the HTML content with the CSS and a container
formatted_html = f"""
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Report</title>
    {css}
</head>
<body>
    <div class="container">
        <h1>Professional Report</h1>
        {html_content}
    </div>
</body>
</html>
"""

# Step 4: Send the email
def send_email(html_content):
    # Email configuration
    sender_email = "your_email@example.com"
    receiver_email = "recipient@example.com"
    password = "your_password"

    # Create the email
    msg = MIMEMultipart()
    msg['From'] = sender_email
    msg['To'] = receiver_email
    msg['Subject'] = "Professional Report"

    # Attach the HTML content
    msg.attach(MIMEText(html_content, 'html'))

    # Send the email
    try:
        with smtplib.SMTP('smtp.example.com', 587) as server:
            server.starttls()
            server.login(sender_email, password)
            server.send_message(msg)
        print("Email sent successfully!")
    except Exception as e:
        print(f"Error sending email: {e}")

# Send the formatted HTML content
send_email(formatted_html)
resource "null_resource" "run_snowsql" {
  provisioner "local-exec" {
    command = <<EOT
      snowsql -o authenticator=oauth \
              -o token="${var.snowflake_oauth_token}" \
              -o accountname="${var.snowflake_account}" \
              -o user="${var.snowflake_user}" \
              -q "SELECT CURRENT_USER();"
    EOT
  }
}